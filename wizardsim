-- Create a simple GUI for Auto Farm and Auto Quest
local ScreenGui = Instance.new("ScreenGui")
local AutoFarmToggle = Instance.new("TextButton")
local AutoQuestToggle = Instance.new("TextButton")
local CooldownSlider = Instance.new("TextButton")
local CooldownLabel = Instance.new("TextLabel")
local Cooldown = 1 -- default cooldown in seconds

-- Setup ScreenGui
ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "AutoFarmGUI"

-- Auto Farm Button
AutoFarmToggle.Parent = ScreenGui
AutoFarmToggle.Position = UDim2.new(0.1, 0, 0.1, 0)
AutoFarmToggle.Size = UDim2.new(0.2, 0, 0.1, 0)
AutoFarmToggle.Text = "Toggle Auto Farm"
AutoFarmToggle.MouseButton1Click:Connect(function()
    local autofarmEnabled = not autofarmEnabled
    if autofarmEnabled then
        AutoFarm()
    end
end)

-- Auto Quest Button
AutoQuestToggle.Parent = ScreenGui
AutoQuestToggle.Position = UDim2.new(0.1, 0, 0.3, 0)
AutoQuestToggle.Size = UDim2.new(0.2, 0, 0.1, 0)
AutoQuestToggle.Text = "Toggle Auto Quest"
AutoQuestToggle.MouseButton1Click:Connect(function()
    local autoQuestEnabled = not autoQuestEnabled
    if autoQuestEnabled then
        AutoQuest()
    end
end)

-- Cooldown Slider
CooldownSlider.Parent = ScreenGui
CooldownSlider.Position = UDim2.new(0.1, 0, 0.5, 0)
CooldownSlider.Size = UDim2.new(0.2, 0, 0.1, 0)
CooldownSlider.Text = "Adjust Cooldown"
CooldownSlider.MouseButton1Click:Connect(function()
    Cooldown = Cooldown + 0.1
    if Cooldown > 5 then Cooldown = 0.5 end -- Cooldown range between 0.5 and 5 seconds
    CooldownLabel.Text = "Cooldown: " .. Cooldown .. "s"
end)

-- Cooldown Label
CooldownLabel.Parent = ScreenGui
CooldownLabel.Position = UDim2.new(0.1, 0, 0.6, 0)
CooldownLabel.Size = UDim2.new(0.2, 0, 0.1, 0)
CooldownLabel.Text = "Cooldown: 1s"

-- AutoFarm Function
function AutoFarm()
    while autofarmEnabled do
        -- Insert autofarm logic here, for example:
        local args = { [1] = 1, [2] = workspace.Levels.Forest.Enemies.Dummy }
        game:GetService("ReplicatedStorage").Remote.CastSpell:FireServer(unpack(args))
        wait(Cooldown) -- use the dynamic cooldown
    end
end

-- AutoQuest Function
function AutoQuest()
    while autoQuestEnabled do
        -- Insert auto quest logic here, for example:
        local args = { [1] = "LJ:1" }
        game:GetService("ReplicatedStorage").Remote.AcceptQuest:FireServer(unpack(args))
        wait(1) -- Adjust the wait time if necessary
    end
end
