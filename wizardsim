local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

local Window = Rayfield:CreateWindow({
   Name = "Ninja Legends Grinding GUI",
   LoadingTitle = "Loading Ninja Legends",
   LoadingSubtitle = "by Snipcola",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil,
      FileName = "NinjaLegendsGrind"
   },
   Discord = {
      Enabled = false
   }
})

local Tab = Window:CreateTab("Grinding Options", 4483362458) -- Icon ID for the tab
local NL_Config = getgenv().NL_Config

local GrindingOptions = Tab:CreateSection("Select Grinding Mode")

-- Auto Swing toggle
Tab:CreateToggle({
    Name = "Auto Swing",
    CurrentValue = NL_Config.Swing,
    Flag = "AutoSwing",
    Callback = function(value)
        NL_Config.Swing = value
    end,
})

-- Auto Sell toggle
Tab:CreateToggle({
    Name = "Auto Sell",
    CurrentValue = NL_Config.Sell,
    Flag = "AutoSell",
    Callback = function(value)
        NL_Config.Sell = value
    end,
})

-- Auto Buy All Swords toggle
Tab:CreateToggle({
    Name = "Auto Buy Swords",
    CurrentValue = NL_Config.BuySwords,
    Flag = "AutoBuySwords",
    Callback = function(value)
        NL_Config.BuySwords = value
    end,
})

-- Auto Buy All Belts toggle
Tab:CreateToggle({
    Name = "Auto Buy Belts",
    CurrentValue = NL_Config.BuyBelts,
    Flag = "AutoBuyBelts",
    Callback = function(value)
        NL_Config.BuyBelts = value
    end,
})

-- Auto Buy All Skills toggle
Tab:CreateToggle({
    Name = "Auto Buy Skills",
    CurrentValue = NL_Config.BuySkills,
    Flag = "AutoBuySkills",
    Callback = function(value)
        NL_Config.BuySkills = value
    end,
})

-- Auto Buy All Shurikens toggle
Tab:CreateToggle({
    Name = "Auto Buy Shurikens",
    CurrentValue = NL_Config.BuyShurikens,
    Flag = "AutoBuyShurikens",
    Callback = function(value)
        NL_Config.BuyShurikens = value
    end,
})

-- Auto Buy All Ranks toggle
Tab:CreateToggle({
    Name = "Auto Buy Ranks",
    CurrentValue = NL_Config.BuyRanks,
    Flag = "AutoBuyRanks",
    Callback = function(value)
        NL_Config.BuyRanks = value
    end,
})

-- Auto Collect Hoops toggle
Tab:CreateToggle({
    Name = "Auto Collect Hoops",
    CurrentValue = NL_Config.CollectHoops,
    Flag = "AutoCollectHoops",
    Callback = function(value)
        NL_Config.CollectHoops = value
    end,
})

-- Unlock Islands once toggle
Tab:CreateToggle({
    Name = "Unlock Islands (Once)",
    CurrentValue = NL_Config.UnlockIslands,
    Flag = "UnlockIslands",
    Callback = function(value)
        NL_Config.UnlockIslands = value
    end,
})

Rayfield:LoadConfiguration()
